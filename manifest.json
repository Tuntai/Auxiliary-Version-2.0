{
    "manifest_version" : 2,
    "version": "2.0.0",
    "name":"Auxiliary",
    "description": "An all in one utility extension!",
    "icons":{
        "128":"icons/icon128.png",
        "48" :"icons/icon48.png",
        "16":"icons/icon16.png"
    },
    
    "browser_action":{
        "default_popup":"popup.html",
        "default_icon":"icons/icon16.png"
    },
    
    "background":{
        "scripts":[
            "js/jquery-3.2.1.js",
            "js/background.js"
        ],
        "css":[
            "style.css"
        ]
    },
    
    "permissions": 
    [
        "tabs",
        "activeTab",
        "declarativeContent", 
        "storage", 
        "alarms", 
        "notifications",
        "contextMenus",
        "webNavigation"
    ] 
}
